<table id='shopping-cart'>
  <th>Item Name</th>
  <th>Number Ordered</th>
  <th>Price</th>
  <th>Remove</th>
  <% current_user.cart_items.each do |cart_item| %>
    <% item = cart_item.item %>
    <%= render partial: "items/cart_item", locals: {cart_item: cart_item, item: item} %>
  <% end %>
<tr><td id='checkout'><%= link_to 'Checkout', cart_path(current_user.cart), method: :delete %></td></tr>
</table>
